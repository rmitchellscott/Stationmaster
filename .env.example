# Stationmaster Configuration

# Basic Configuration
PORT=8000
GIN_MODE=release
DATABASE_URL=/data/stationmaster.db

# Multi-User Mode
PUBLIC_REGISTRATION_ENABLED=false

# Security
JWT_SECRET=change-this-to-a-random-secret-key
SESSION_EXPIRATION_HOURS=168

# OIDC Configuration (optional)
OIDC_ENABLED=false
OIDC_ISSUER=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_REDIRECT_URI=http://localhost:8000/api/auth/oidc/callback

# Proxy Authentication (optional)
PROXY_AUTH_ENABLED=false
PROXY_AUTH_HEADER=X-Remote-User
PROXY_AUTH_AUTO_CREATE=false

# SMTP Configuration (optional - for password reset emails)
SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com
SMTP_USE_TLS=true

# PostgreSQL Configuration (optional - use instead of SQLite)
# Uncomment these to use PostgreSQL instead of SQLite
# DATABASE_TYPE=postgres
# DATABASE_URL=postgres://stationmaster:password@localhost/stationmaster?sslmode=disable
# POSTGRES_DB=stationmaster
# POSTGRES_USER=stationmaster
# POSTGRES_PASSWORD=change-this-password

# Admin Account (created on first run if using multi-user mode)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme